<html>
    <head>
        <title>
            <%= title %>
        </title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        
    </head>
    <body> 
        <div class="row mw-100">
            <!-- Form for the entries -->
            <section class="col-md-3 border border-top-0 border-left-0 min-vh-100" id="bill-form-section" style="background: #eee; background-image: url(/images/bg-form.png);">
                <!-- Bill Form Heading -->
                <div class="d-flex align-items-center justify-content-center h3 py-5 " id="bill-heading">
                Enter Electricity Bill
                </div>
                <!-- Power form container -->
                <div class="container-fluid" id="bill-form-container">
                    <form action="/post-data" id="new-bill-form" method="post">
                        <!-- Contains Start Date -->
                        <div class="row text-dark my-3">
                            <div class="col-sm-12">
                                <label for="sDate">Start Date</label>
                                <input type="date" class="form-control" id="sDate" name="sDate" max="2022-04-30" required>
                            </div>
                        </div>
                        <!-- Contains End Date -->
                        <div class="row text-dark my-3">
                            <div class="col-sm-12">
                                <label for="eDate">End Date</label>
                                <input type="date" class="form-control" id="eDate" name="eDate"  max="2022-04-30" placeholder="Student Name" required>
                            </div>
                        </div>
                        <!-- Contains Power value -->
                        <div class="row text-dark my-3">
                            <div class="col-sm-12">
                                <label for="power">Power Consumed</label>
                                <input type="number" class="form-control" id="power" name="power" placeholder="Power consumed in KWH" required>
                            </div>
                        </div>
                        <div class="row d-flex justify-content-center">
                            <button type="submit" class="col-auto btn btn-primary m-3">Submit</button>
                        </div>
                    </form>
                </div>
            </section>
            <!-- Form to make the chart -->
            <section class="col-md-9 min-vh-100" style="background: #f8f9fa; background-image: url(/images/bg-table.png);">
                <canvas class="p-5 " id="myChart" ></canvas>
            </section>
        </div>
        
        <!-- Bootstrap library -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <!-- Graph.js library -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js">
        </script>
        <!-- Graph.js function -->
        <script>
            var test1 = <%-JSON.stringify(xaxis) %>; 
            var test2 = <%-JSON.stringify(yaxis) %>; 
            var xValues = test1;
            var yValues = test2
            let chart = new Chart("myChart", {
                type: "line",
                data: {
                    labels: xValues,
                    fill: false,
                    datasets: [{
                        label: 'Power Consumed',
                        borderColor: "#000000",
                        borderDash: [2, 2],
                        pointBackgroundColor: "#00C851",
                        pointBorderColor: "#00C851",
                        pointHoverBackgroundColor: "#55bae7",
                        pointHoverBorderColor: "#55bae7",
                        data: yValues
                    }]
                },
                
                // plugins: [ChartDataLabels],
                options: {
                    scales: {
                    xAxis: {
                        // The axis for this scale is determined from the first letter of the id as `'x'`
                        // It is recommended to specify `position` and / or `axis` explicitly.
                        type: 'time',
                    }
                    }
                }
            });
        </script>
        <!-- JQuery library -->
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
        <!-- For ajax request -->
        <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"></script>
    </body>
</html>